/* pages/login/login.wxss */
page {
  width: 100%;
  height: 100%;
  background-color: #f3f3f3;
  padding-top: 100rpx;
}
.wrap {
  display: flex;
  flex-flow: column;
  justify-content: space-between;
  width: 690rpx;
  margin: 0 auto;
}
.section {
  width: 690rpx;
}
.section {
  display: flex;
  flex-wrap: wrap;
  height: 80rpx;
  border-radius: 10rpx;
  background-color: #fff;
  box-shadow: 0 10rpx 36rpx 10rpx rgba(98, 98, 98, .09);
}
.img-box {
  width: 70rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
input {
  width: 620rpx;
  align-self: center;
  font-size: 26rpx;
  color: #353535;
}
.phone image {
  width: 30rpx;
  height: 34rpx;
}
.password {
  margin: 60rpx 0;
}
.password image {
  width: 25rpx;
  height: 40rpx;
}
.login-btn {
  height: 80rpx;
  line-height: 80rpx;
  margin-bottom: 40rpx;
  background-color: #0261b1;
  color: #fff;
  font-size: 28rpx;
  box-shadow: 0 10rpx 30rpx 10rpx rgba(66, 112, 152, .2);
}
.links {
  display: flex;
  justify-content: space-between;
  color: #0261b1;
  font-size: 24rpx;
}
.to-reg {
  width: 300rpx;
  height: 100rpx;
  background-color: transparent;
  margin-right: 20rpx;
  text-align: right;
}
.to-pass {
  width: 300rpx;
  height: 100rpx;
  background-color: transparent;
  margin-left: 20rpx;
}
.errmsg {
  color: #ff0000;
  font-size: 22rpx;
  margin-top: 10rpx;
}