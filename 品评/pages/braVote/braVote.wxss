/* pages/voting/voting.wxss */
page {
  background-color: #f3f3f3;
}
image {
  display: block;
}
.wrap {
  position: relative;
}
.banner {
  width: 750rpx;
  height: 290rpx;
}
.banner image {
  width: 100%;
  height: 100%;
}
.champion {
  position: relative;
  width: 690rpx;
  height: 260rpx;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: space-around;
  color: #fff;
  padding-top: 30rpx;
  margin-bottom: 30rpx;
}
.a_bg {
  position: absolute;
  width: 750rpx;
  height: 386rpx;
}
button::after {
  border: none;
}
.wrap button {
  width: 166rpx;
  padding: 0;
  height:67rpx;
  background:transparent;
  font-size:30rpx;
  line-height:67rpx;
}
.a_votebtn {
  margin-top: 34rpx;
  border:1rpx solid #fff;
  color:#fff;
}
.a_img_l {
  width: 83rpx;
  height:123rpx;
}
.a_img_m {
  width: 214rpx;
  height:112rpx;
}
.top_3 .band image {
  width: 57rpx;
  height: 57rpx;
}
.top_3 .band .rank {
  line-height: 57rpx;
  width: 57rpx;
  height: 57rpx;
}
.top_10 .band .rank {
  line-height: 48rpx;
  width: 48rpx;
  height: 48rpx;
}
.top_3 .band .rank,
.top_10 .band .rank {
  position: absolute;
  top: 0;
  left: 0;
  text-align: center;
}
.top_3 {
  background: #e9f7ff;
}
.top_3,
.top_10,
.others {
  width: 690rpx;
  height: 166rpx;
  margin: 0 auto 10rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-radius: 20rpx;
}
.left {
  display: flex;
  align-items: center;
}
.o_votebtn {
  border:1rpx solid #1d70b5;
  color:#1d70b5;
  margin-right: 24rpx;
}
.top_3 .o_img_m {
  margin: 0 35rpx 0 10rpx;
}
.o_img_m {
  width: 185rpx;
  height: 98rpx;
  box-shadow: 0 0 20rpx 0 rgba(0, 0, 0, .1);
}
.top_3 .band {
  width: 57rpx;
  height: 57rpx;
  margin-left: 8rpx;
  position: relative;
}
.item-name {
  font-size: 33rpx;
  color: #353535;
}
.item-votes {
  font-size: 26rpx;
  color: #888;
}
.top_10 {
  background: #f7fcff;
}
.top_10 .band {
  margin-left: 12rpx;
  width: 50rpx;
  height: 50rpx;
  position: relative;
}
.top_10 .band image {
  width: 48rpx;
  height: 48rpx;
}
.others .o_img_m,
.top_10 .o_img_m {
  margin: 0 35rpx 0 16rpx;
}
.others {
  background: #fff;
}
.others .band {
  width: 50rpx;
  height: 50rpx;
  border-radius: 20rpx;
  background: #4babef;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fffefe;
  font-size: 26rpx;
  margin-left: 12rpx;
}
.vote-result,
.mark {
  position: fixed;
  width: 100%;
  height: 100%;
  padding-top: 270rpx;
  top: 0;
  left: 0;
  background-color: rgba(0,0,0,0.7);
}
.mark {
  z-index: 999;
}
.vote-result {
  z-index: 9;
}
.vote-result-ctt,
.mark-ctt {
  position: relative;
  display: flex;
  display: -webkit-flex;
  flex-flow: column;
  align-items: center;
  width: 500rpx;
  background-color: #fff;
  border-radius: 10rpx;
  margin: 0 auto;
}
.mark .close {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}
.mark .mark-logo {
  width: 240rpx;
  height: 120rpx;
  margin-top: 30rpx;
  border: 1rpx solid rgba(2, 97, 177, .5);
  box-sizing: border-box;
}
.mark .hold {
  font-size: 24rpx;
  color: #353535;
  margin: 30rpx 0 40rpx 0;
}
.mark .verify-box {
  display: flex;
  width: 450rpx;
  margin: 0 auto;
  flex-flow: row;
  justify-content: space-between;
}
.mark .verify-box .show-code {
  width: 160rpx;
  height: 50rpx;
  background-color: #d6e4f0;
  border-radius: 10rpx;
  margin-left: 20rpx;
  overflow: hidden;
}
.mark .verify-box .show-code image {
  width: 100%;
  height: 100%;
}
.mark .verify {
  width: 210rpx;
  height: 50rpx;
  border: 1rpx solid #888;
  font-size: 24rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
  padding-left: 20rpx;
}
.vote-result button,
.mark button {
  font-size: 24rpx;
  line-height: 50rpx;
  width: 260rpx;
  height: 50rpx;
  margin: 50rpx 0;
  color: #fff;
}
.mark button {
  background-color: #0261b1;
}
.vote-result button {
  margin-top: 0;
}
.vote-result .vote-result-pic {
  position: absolute;
  top: -50rpx;
  width: 100rpx;
  height: 100rpx;
}
.vote-result .link {
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  height: 50rpx;
  width: 480rpx;
  font-size: 22rpx;
  line-height: 50rpx;
  background-color: #fff2db;
  border-radius: 10rpx;
}
.vote-result .name,
.vote-result .link-msg {
  font-size: 26rpx;
  line-height: 26rpx;
  color: #0261b1;
}
.vote-result .tip {
  font-size: 30rpx;
  line-height: 30rpx;
  margin: 75rpx 0 28rpx 0;
}
.vote-result .link {
  margin: 19rpx 0 30rpx 0;
}
.vote-result .name text {
  color: #d50500;
}