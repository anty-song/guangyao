.search {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 18rpx;
}
.search .search-input {
  width: 539rpx;
  height: 61rpx;
  border: 2rpx solid #bebebe;
  border-radius: 10rpx;
  padding-left: 14rpx;
  color: #a9a9a9;
  font-size: 24rpx;
  box-shadow: -5rpx 5rpx 5rpx 0 #ccc inset;
}
.search .search-btn {
  height: 60rpx;
  width: 128rpx;
  color: #fff;
  border-radius: 10rpx;
  text-align: center;
  font-size: 24rpx;
  line-height: 60rpx;
}
.player {
  width: 670rpx;
  margin: 16rpx auto 0;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.player .item {
  position: relative;
  width: 320rpx;
  border-radius: 10rpx;
  /* overflow: hidden; */
  margin-bottom: 35rpx;
}
.player .item .number {
  position: absolute;
  top: -5rpx;
  left: -5rpx;
  width: 90rpx;
  height: 40rpx;
  background-color: rgba(0, 0, 0, .4);
  border-top-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  color: #fff;
  font-size: 24rpx;
  text-align: center;
  line-height: 40rpx;
}
.player .item .img-box image {
  height: 100%;
  width: 100%;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}
.player .item .item-info {
  height: 172rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  color: #fff;
  font-size: 26rpx;
}
.player .item .item-info .name {
  max-width: 248rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.player .item .item-info .name .icon {
  margin-right: 3rpx;
}
.player .item .item-info .handle {
  height: 70rpx;
  width: 248rpx;
  background-color: #fff;
  color: #333;
  text-align: center;
  line-height: 70rpx;
  border-radius: 12rpx;
}
.player .item .item-info .handle .icon {
  margin-right: 7rpx;
}
.vote-result {
  display: flex;
  align-items: center;
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background-color: rgba(0,0,0,0.7);
  z-index: 999;
}
.vote-result image {
  width: 100%;
  height: 100%;
}
.vote-result .vote-result-ctt {
  position: relative;
  display: flex;
  display: -webkit-flex;
  flex-flow: column;
  align-items: center;
  width: 440rpx;
  padding: 44rpx 50rpx 36rpx;
  background-color: #fff;
  border-radius: 10rpx;
  margin: 0 auto;
}
.vote-result .close {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: 30rpx;
  right: 30rpx;
}
.vote-result .img-box {
  width: 135rpx;
  height: 101rpx;
}
.vote-result .reshint {
  font-size: 30rpx;
  line-height: 30rpx;
  margin: 27rpx 0 30rpx;
}
.vote-result .thank {
  font-size: 26rpx;
  line-height: 26rpx;
}
.vote-result .msg {
  text-align: center;
  font-size: 20rpx;
  line-height: 20rpx;
  margin: 20rpx 0 30rpx;
  color: #888;
}
.vote-result .lapiao {
  font-size: 24rpx;
  line-height: 24rpx;
  margin-bottom: 24rpx;
  color: #1e478c;
}
.vote-result .btn-group {
  width: 440rpx;
  display: flex;
  justify-content: space-between;
}
.vote-result .btn-group view {
  width: 200rpx;
  height: 80rpx;
  border-radius: 10rpx;
  color: #fff;
  font-size: 28rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #619fd9;
  border: 1rpx solid #2c5f8f;
}