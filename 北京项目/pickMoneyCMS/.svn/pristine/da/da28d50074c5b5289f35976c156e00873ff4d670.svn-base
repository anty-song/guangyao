//新增加载所有图片方法
function getAllImage(){
	var image_arr={image:[]};
	Object.defineProperty(image_arr,'image',{
		writable: true,
		value: [
		"bg.png",
		"box1.png",
		"box2.png",
		"button.png",
		"egg.png",
		"electricity0.png",
		"electricity1.png",
		"floor.png",
		"floor1.png",
		"godman.png",
		"hand.png",
		"hand1.png",
		"light.png",
		"myprice.png",
		"pageleft.png",
		"pageright.png",
		"redpack.png",
		"redpackbtn.png",
		"rocker.png",
		"spring.png",
		"spring1.png",
		"stage.png",
		"string1.png",
		"title.png",
		"treasure.png",
		"wallet.png"
		]
	});
	var image_num=0;
	var tick;
	tick=setInterval(function(){
		var img=new Image();
		img.src=path.src+image_arr.image[image_num];
		img.onload=function(){
			image_num++;
			if(image_num===image_arr.image.length){
				clearInterval(tick);
			}
		}
	},500/image_arr.image.length);
}

