@media only screen and (max-width:750px){
    *{max-width: 750px;margin: auto;}
    html{font-size: calc(100/750*100vw);}
}
@media only screen and (min-width:750px){
    *{max-width: 750px;}
     html{font-size: 100px;margin: auto;}
}
html{max-width: 750px;}
.detail{min-height: 100vh;padding: 0 .3rem;}
.nav{height: .88rem;line-height: .88rem;text-align: center;font-size: .36rem;color: #fff;}
.nav i{float: left;width: .26rem;height: .46rem;background: url(images/nav_fh@2x.png) 0 0 no-repeat;background-size: 100% 100%;margin-top: .21rem;}
.information{width: 100%;height:10.8rem;background: #fff;border-radius: .15rem;position: relative;}
.active-regulation{font-size: .48rem;text-align: center;color: #fff;margin: .3rem auto .4rem;}
.regulations{margin: 0 .2rem;padding: .3rem 0;}
.titles{text-align: center;font-size: 0;height: .6rem;line-height: .6rem;margin-bottom: .1rem;}
.titles .line{display: inline-block;width: .6rem;border: 1px solid #333;}
.titles .dot{display: inline-block;width: .04rem;height: .04rem;border-radius: 50%;background-color: #333;margin: 0 .2rem;}
.retitle{font-size: .34rem;color: #000;vertical-align: middle;}
.regulation_list ul{list-style: none;padding: 0;margin: 0;}
.regulation_list ul li{font-size: 0;margin-bottom: .3rem;}
.regulation_list ul li div{display: inline-block;}
.li_number{text-align: center;width: .34rem;height: .34rem;line-height: .34rem;color: #fff;border-radius: 50%;background-color: #FFBB08;font-size: .28rem;vertical-align: top;margin-right: .14rem;margin-top: .1rem;}
.li_detail{width: 6rem;font-size: .3rem;vertical-align: top;color: #333;line-height: .48rem;}