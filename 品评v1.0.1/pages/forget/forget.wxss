/* pages/forget/forget.wxss */
page {
  width: 100%;
  height: 100%;
  background-color: #f3f3f3;
  padding-top: 100rpx;
}
.wrap {
  display: flex;
  flex-flow: column;
  justify-content: space-between;
  width: 690rpx;
  margin: 0 auto;
}
.section {
  width: 690rpx;
}
.section,
.yzm-box {
  margin-bottom: 60rpx;
  flex-wrap: wrap;
}
.show-yzm,
.yzm,
.section {
  display: flex;
  height: 80rpx;
  border-radius: 10rpx;
  background-color: #fff;
  box-shadow: 0 10rpx 36rpx 10rpx rgba(98, 98, 98, .09);
}
.img-box {
  width: 70rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
input {
  width: 620rpx;
  align-self: center;
  font-size: 26rpx;
  color: #353535;
}
.yzm-box {
  display: flex;
  position: relative;
}
.yzm-box .errmsg {
  position: absolute;
  top: 80rpx;
  left: 0;
}
.yzm {
  width: 500rpx;
}
.show-yzm {
  display: flex;
  justify-content: center;
  width: 180rpx;
  height: 80rpx;
  margin-left: 10rpx;
  font-size: 18rpx;
  line-height: 80rpx;
}
.phone image {
  width: 30rpx;
  height: 34rpx;
}
.password image {
  width: 25rpx;
  height: 40rpx;
}
.yzm image {
  width: 30rpx;
  height: 30rpx;
}
.login-btn {
  height: 80rpx;
  line-height: 80rpx;
  background-color: #0261b1;
  color: #fff;
  font-size: 28rpx;
  box-shadow: 0 10rpx 30rpx 10rpx rgba(66, 112, 152, .2);
}
.errmsg {
  color: #ff0000;
  font-size: 22rpx;
  margin-top: 10rpx;
}