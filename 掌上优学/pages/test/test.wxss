/**index.wxss**/
/* 页面 */
.index {
  padding-top: 88rpx;
}
/* 顶部导航 */
.index .topbar {
  position: fixed;
  background: #ffffff;
  display: flex;
  top: 0;
  height: 88rpx;
  width: 100%;
  box-shadow: 0 10rpx 20rpx 0 rgba(0,0,0,.1);
  z-index: 9;
}
.index .topbar .scroll-wrap {
  width: 600rpx;
}
.index .topbar .top-item {
  display: inline-block;
  font-size: 36rpx;
  line-height: 88rpx;
  color: #333333;
  font-weight: bold;
  padding: 0 35rpx;
}
/* .index .topbar .top-active {
  color: #00cca2;
} */
.stage-select {
  height: 100%;
  width: 150rpx;
  box-shadow: -10rpx 0 10rpx 0 rgba(0,0,0,.1);
}
.stage-picker {
  width: 130rpx;
  margin: 19rpx auto 0;
  height: 50rpx;
  border-radius: 25rpx;
  background: #f3f3f3;
  font-size: 30rpx;
  line-height: 50rpx;
  text-align: center;
}
/* 科目选择 */
.subjects {
  height: 88rpx;
}
.scroll_H {
  width: 100%;
  white-space: nowrap;
}
.subject {
  display: inline-block;
  width: 120rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 30rpx;
  background: #f1f1f1;
  border-radius: 30rpx;
  margin-right: 20rpx;
  margin-top: 14rpx;
}
.subject-active {
  color: #ffffff;
  background: #00cca2;
}
.subject:first-of-type {
  margin-left: 35rpx;
}
/* 轮播 */
.lunbo {
  height: 200rpx;
}
.banner-wrap {
  height: 200rpx;
}
.banner-wrap image,
.shower-avator image {
  width: 100%;
  height: 100%;
}
/* 秀场 */
.show-content {
  background: #f1f1f1;
}
.show-item {
  background: #ffffff;
  padding: 20rpx 32rpx 0;
  margin-top: 20rpx;
}
.show-item:first-of-type {
  margin-top: 0;
}
.shower-info {
  display: flex;
  align-items: center;
}
.shower-others {
  margin-left: 16rpx;
}
.shower-name {
  font-size: 34rpx;
  color: #333333;
}
.shower-gender {
  width: 28rpx;
  height: 28rpx;
  margin: 0 22rpx;
}
.shower-distance,
.time,
.school {
  font-size: 26rpx;
  color: #888888;
}
.school {
  margin-left: 20rpx;
}
.shower-avator {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
}
.show-words {
  font-size: 30rpx;
  color: #333333;
  margin-top: 16rpx;
}
.show-img-box image {
  display: block;
  margin: 0 auto;
}
.current-subject {
  color: #2194ed;
}
.reward {
  color: #ed2121;
}
.interaction {
  display: flex;
  justify-content: space-between;
  height: 88rpx;
  align-items: center;
  border-top: 1rpx solid #f1f1f1;
  margin-top: 16rpx;
}
.interaction view {
  display: flex;
  align-items: center;
}
.interaction image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}
.interaction text {
  font-size: 36rpx;
  color: #666666;
}
.location {
  display: flex;
  align-items: center;
}
.location image {
  width: 22rpx;
  height: 32rpx;
}
.place {
  font-size: 30rpx;
  color: #333333;
  margin-left: 10rpx;
}