.auth-modal-box {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
  width: 100%;
  height: 100%;
  background:rgba(255,255,255,0.6);
  .auth-form {
    width: 420px;
    text-align: center;
    margin: 167px auto 0;
    padding: 43px 0 61px 0;
    background:rgba(255,255,255,1);
    box-shadow:2px 3px 7px rgba(0,0,0,0.15);
    opacity:1;
    border-radius:5px;
    position: relative;
    .close {
      cursor: pointer;
      position: absolute;
      width: 25px;
      height: 25px;
      right: 12px;
      top: 12px;
      img {
        width: 100%;
        height: 100%;
      }
    }
    .brand {
      width: 60px;
      height: 60px;
      margin: 0 auto;
      img {
        width: 100%;
        height: 100%;
      }
    }
    .tag {
      font-size: 16px;
      color: #535353;
      text-align: center;
      margin: 18px 0 32px;
    }
    .input-group {
      padding: 0 35px;
      .input-box {
        width: 350px;
        position: relative;
        margin: 0 auto 25px;
        .input {
          width: 350px;
          padding: 10px;
          font-size: 14px;
          line-height: 20px;
          border:1px solid rgba(159,159,159,1);
          border-radius:5px;
          box-sizing: border-box;
        }
        .send-vcode-btn {
          border: none;
          position: absolute;
          top: 5px;
          right: 5px;
          width:91px;
          height:31px;
          background:rgba(245,245,245,1);
          opacity:1;
          border-radius:5px;
        }
      }
      .forget-pwd {
        font-size: 14px;
        color: #ABABAB;
        float: right;
        margin-top: -15px;
      }
      .agree-box {
        float: left;
        display: flex;
        align-items: center;
        font-size: 14px;
        color: #9e9e9e;
        margin-top: -10px;
        input {
          margin: 0;
        }
        span {
          margin-top: -2px;
          margin-left: 8px;
        }
      }
    }
    .btn {
      cursor: pointer;
      width: 350px;
      height: 44px;
      background: #EA6457;
      line-height: 44px;
      font-size: 18px;
      color: #fff;
      text-align: center;
      border-radius: 5px;
      border: none;
      box-shadow:0px 1px 2px rgba(159,0,0,0.34);
    }
    .bottom-links {
      text-align: center;
      margin-top: 30px;
      font-size: 12px;
      span {
        cursor: pointer;
        color: #EA6457;
      }
    }
  }
}