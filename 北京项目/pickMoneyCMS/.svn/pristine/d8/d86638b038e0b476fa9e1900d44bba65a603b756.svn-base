    // 点击广告跳转到外部广告链接
    $('.advimg').click(function(){
        console.log(ad_url);
        $('.marsker').fadeOut();
        $('.result1').hide();
        $('.result2').hide();
        $('.result3').hide();
        if($('.response input').hasClass('selyes')){
            nextItem();
            $(".dialog_again").hide();
        }else if($('.result2 .delay').val()=='delay'){
