function getAllImage(){
    var image_arr={image:[]};
    Object.defineProperty(image_arr,'image',{
        writable: true,
        value: [
        "banner.png",
        "bg.png",
        "game_bg.png",
        "hdjl.png",
        "head_img.png",
        "my_price.png",
        "redpack_logo.png",
        "slide_image.png",
        "startBtn.png",
        "timg.jpg",
        "yello_light.png"
        ]
    });
    var image_num=0;
    var tick;
    tick=setInterval(function(){
        var img=new Image();
        img.src=path.src+image_arr.image[image_num];
        img.onload=function(){
            image_num++;
            if(image_num===image_arr.image.length){
                clearInterval(tick);
            }
        }
    },500/image_arr.image.length);
}
