/* pages/braRank/braRank.wxss */
page {
  background-color: #f3f3f3;
}
.container {
  display: flex;
  width: 710rpx;
  margin: 0 auto;
  flex-flow: wrap;
  padding-top: 10rpx;
}
.container .rank-item {
  width: 100%;
  height: 375rpx;
  overflow: hidden;
  margin-top: 10rpx;
  border-radius: 10rpx;
}
.container .rank-item .item-name {
  width: 100%;
  height: 210rpx;
  position: relative;
  text-align: center;
  padding-top: 70rpx;
}
.container .rank-item .item-name image {
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
  width: 100%;
  height: 100%;
}
.container .rank-item .item-name .tit-box {
  width: 690rpx;
  height: 130rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: rgba(0, 0, 0, .5);
  margin: 0 auto;
}
.container .rank-item .item-name .tit {
  color: #fff;
  font-size: 36rpx;
}
.container .rank-item .item-name .subtit {
  color: #fff;
  font-size: 26rpx;
}
.container .rank-item .item-info {
  width: 620rpx;
  margin: 0 auto;
  display: flex;
  height: 76rpx;
  font-size: 24rpx;
  padding: 0 20rpx;
  line-height: 24rpx;
  align-items: center;
  background-color: #fff;
  justify-content: space-between;
}
.container .rank-item .item-info .time {
  color: #353535;
}
.container .rank-item .item-info image {
  width: 29rpx;
  height: 19rpx;
  margin-right: 10rpx;
}
.container .rank-item .item-info .scan {
  color: #888;
}
.loadmore {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 20rpx;
  color: #ccc;
  text-align: center;
}