.common-section .active-data {
  display: flex;
  align-items: center;
  height: 136rpx;
  width: 100%;
  border-radius: 10rpx;
  color: #fff;
  font-size: 26rpx;
}
.common-section .active-data > view {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  height: 90rpx;
  flex-grow: 1;
  border-left: 2rpx solid #fff;
}
.common-section .active-data > view .icon {
  margin-right: 4rpx;
}
.common-section .active-data .total {
  border-left: none;
}
.common-section .timer {
   text-align: center; 
  margin: 22rpx 0 34rpx;
}
.common-section .timer-box {
  display: inline-block;
  height: 54rpx;
  border-radius: 10rpx;
  padding: 0 26rpx;
  color: #fff;
  font-size: 26rpx;
  line-height: 54rpx;
}
.common-section .timer-box .icon {
  margin-right: 8rpx;
}
.common-section .marquee {
  height: 50rpx;
  white-space: nowrap;
  position: absolute;
  top: 30rpx;
  color: #fff;
  font-size: 28rpx;
  line-height: 50rpx;
  background-color: #000;
  border-radius: 25rpx;
  padding: 0 20rpx;
  z-index: 999;
}